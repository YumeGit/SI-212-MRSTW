@model MRSTW.Models.Post

<div class="post">
    <h2>@Html.ActionLink(Model.Name, "View", "Post", new { id = Model.Id }, new { })</h2>
    <div>
        <small>
            Опубликован: @Model.Created.ToShortDateString() -
            Автор: @Model.Author.Name
        </small>
    </div> 
    <div>
        <small>
            <a href="@Url.Action("Edit", "Post", new { id = Model.Id })">[Редактировать]</a>
            <a href="@Url.Action("Delete", "Post", new { id = Model.Id })">[Удалить]</a>
        </small>
    </div>
    <p class="content">
        @Model.ShortStory
    </p>
    <div>
        <a href="@Url.Action("View", "Post", new { id = Model.Id })">View More →</a>
    </div>
</div>

<hr/>