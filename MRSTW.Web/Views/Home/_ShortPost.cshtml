@model MRSTW.Web.Models.Post

<div class="post">
    <h2>@Html.ActionLink(Model.Name, "Details", "Post", new { id = Model.Id }, new { })</h2>
    <div>
        <small>
            Опубликован: @Model.Created.ToShortDateString() -
            Автор: @Model.Author.Name
        </small>
    </div> 
    <div>
        <small>
            <a href="@Url.Action("Edit", "Post", new { id = Model.Id })">[Редактировать]</a>
            <a href="@Url.Action("Delete", "Post", new { id = Model.Id })">[Удалить]</a>
        </small>
    </div>
    <p class="post_content">
        @(string.Join(" ", Model.Story.Split(' ').Take(50)))...
    </p>
    <div>
        <a href="@Url.Action("Details", "Post", new { id = Model.Id })">View More →</a>
    </div>
</div>

<hr/>