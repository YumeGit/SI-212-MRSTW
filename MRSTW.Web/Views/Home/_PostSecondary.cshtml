@model MRSTW.Domain.Entities.Post

<a href="@Url.Action("Details", "Post", new { id = Model.Id })" class="display_contents">
    <div class="post secondary card">
        <div class="thumbnail">
            <div class="category">@Model.Category.Title</div>
            <img src="@Model.Thumbnail" />
        </div>
        <div class="info">
            @Model.Name
        </div>
    </div>
</a>