@model MRSTW.Web.Models.View.RegisterForm

@{
    ViewBag.Title = "Sign Up";
}

@section Styles
{
    <link rel="stylesheet" href="~/Content/styles/Registrarion.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&family=Itim&display=swap" rel="stylesheet">
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h1 title="Please, fill in all the empty fields">Registration</h1>
    <div class="group">
        @Html.LabelFor(x => x.Email)
        @Html.EditorFor(x => x.Email)
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="group">
        @Html.LabelFor(x => x.Name)
        @Html.EditorFor(x => x.Name)
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="group">
        @Html.LabelFor(x => x.Password)
        @Html.PasswordFor(x => x.Password)
        @Html.ValidationMessageFor(x => x.Password)
    </div>
    <div class="group">
        @Html.LabelFor(x => x.PasswordConfirm)
        @Html.PasswordFor(x => x.PasswordConfirm)
        @Html.ValidationMessageFor(x => x.PasswordConfirm)
    </div>
    <div class="group button_container">
        <b><button> Sign Up </button></b>
    </div>
    <div class="group">
        @Html.ActionLink("Already have an account?", "Login")
    </div>
}